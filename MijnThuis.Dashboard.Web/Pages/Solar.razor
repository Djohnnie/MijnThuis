                <CardHeaderContent>
                    <MudText Typo="Typo.body1">Zonneproductie 2024</MudText>
                    <MudText Typo="Typo.body2">Zonneproductie verbruikt, naar batterij en naar het net in 2024.</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <ApexCharts.ApexChart TItem="SolarPowerHistoryEntry" @ref="_apexChart2"
                                      Title="Order Net Value" Options="_options2">

                    <ApexCharts.ApexPointSeries TItem="SolarPowerHistoryEntry"
                                                Items="SolarPowerYesterday"
                                                Name="Naar batterij"
                                                XValue="@(e => e.Date)"
                                                YValue="@(e => e.ProductionToBattery)"
                                                SeriesType="ApexCharts.SeriesType.Area" />

                    <ApexCharts.ApexPointSeries TItem="SolarPowerHistoryEntry"
                                                Items="SolarPowerYesterday"
                                                Name="Naar huis"
                                                XValue="@(e => e.Date)"
                                                YValue="@(e => e.ProductionToHome)"
                                                SeriesType="ApexCharts.SeriesType.Area" />

                    <ApexCharts.ApexPointSeries TItem="SolarPowerHistoryEntry"
                                                Items="SolarPowerYesterday"
                                                Name="Naar net"
                                                XValue="e => e.Date"
                                                YValue="e => e.ProductionToGrid"
                                                SeriesType="ApexCharts.SeriesType.Area" />
                </ApexCharts.ApexChart>
