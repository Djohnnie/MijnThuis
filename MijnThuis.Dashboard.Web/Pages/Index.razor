@using MijnThuis.Dashboard.Web.Components
@using MijnThuis.Dashboard.Web.Components.Widgets
@using MijnThuis.Dashboard.Web.Middleware

@inject ExtraPageArguments ExtraPageArguments
@page "/"

<PageTitle>Mijn Thuis</PageTitle>

<MudGrid Style="@Style">

    <MudItem xs="12">
        <CopilotTile />
    </MudItem>

    <MudHidden Breakpoint="Breakpoint.Lg" Invert="true">
        <MudItem xs="12" lg="4">
            <EnergyWidgetTile />
        </MudItem>
    </MudHidden>

    <MudItem xs="12" lg="4">
        <SolarWidgetTile />
    </MudItem>

    <MudHidden Breakpoint="Breakpoint.Lg" Invert="true">
        <MudItem xs="12" lg="4">
            <BatteryWidgetTile />
        </MudItem>
    </MudHidden>

    @if (ExtraPageArguments.IsTesla)
    {
        <MudItem xs="12">
            <PowerTile />
        </MudItem>
    }
    else
    {
        <MudItem xs="12" sm="6" md="6" lg="4" xl="3">
            <PowerTile />
        </MudItem>
    }

    @if (ExtraPageArguments.IsTesla)
    {
        <MudItem xs="12">
            <SolarTile />
        </MudItem>
    }
    else
    {
        <MudItem xs="12" sm="6" md="6" lg="4" xl="3">
            <SolarTile />
        </MudItem>
    }

    @if (ExtraPageArguments.IsTesla)
    {
        <MudItem xs="12">
            <HeatingTile />
        </MudItem>
    }
    else
    {
        <MudItem xs="12" sm="6" md="6" lg="4" xl="3">
            <HeatingTile />
        </MudItem>
    }

    @* @if (ExtraPageArguments.IsTesla)
    {
    <MudItem xs="12">
    <LampsTile />
    </MudItem>
    }
    else
    {
    <MudItem xs="12" sm="6" md="6" lg="4" xl="3">
    <LampsTile />
    </MudItem>
    } *@

    @if (ExtraPageArguments.IsTesla)
    {
        <MudItem xs="12">
            <CarTile />
        </MudItem>
    }
    else
    {
        <MudItem xs="12" sm="6" md="6" lg="4" xl="3">
            <CarTile />
        </MudItem>
    }

    @if (ExtraPageArguments.IsTesla)
    {
        <MudItem xs="12">
            <SaunaTile />
        </MudItem>
    }
    else
    {
        <MudItem xs="12" sm="6" md="6" lg="4" xl="3">
            <SaunaTile />
        </MudItem>
    }

    @if (ExtraPageArguments.IsTesla)
    {
        <MudItem xs="12">
            <SmartLockTile />
        </MudItem>
    }
    else
    {
        <MudItem xs="12" sm="6" md="6" lg="4" xl="3">
            <SmartLockTile />
        </MudItem>
    }

</MudGrid>

@code
{
    private string Style { get; set; }

    protected override void OnInitialized()
    {
        Style = ExtraPageArguments.IsTesla ? "zoom: 1.5;" : "";
    }
}