@using MijnThuis.Contracts.Solar
@using MijnThuis.Dashboard.Web.Model.Charts;
@implements IDisposable
@inject IServiceScopeFactory ServiceProvider
@inject ILogger<BatteryHealthChart> Logger

<MudCard Outlined>
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Primary">
                <MudIcon Icon="@Icons.Material.Filled.BatteryAlert" />
            </MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">Thuisbatterij degradatie</MudText>
            <MudText Typo="Typo.body2">De historische gezondheid van de thuisbatterij</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <ApexCharts.ApexChart TItem="ChartDataEntry<string, decimal>" Options="_options" @ref="_apexChart">

            <ApexCharts.ApexPointSeries TItem="ChartDataEntry<string, decimal>"
                                        Items="@BatteryHealth.Series1"
                                        Name="@BatteryHealth.Series1Description"
                                        XValue="@(e => e.XValue)"
                                        YValue="@(e => e.YValue)"
                                        SeriesType="ApexCharts.SeriesType.Line" />

            <ApexCharts.ApexPointSeries TItem="ChartDataEntry<string, decimal>"
                                        Items="@BatteryHealth.Series2"
                                        Name="@BatteryHealth.Series2Description"
                                        XValue="@(e => e.XValue)"
                                        YValue="@(e => e.YValue)"
                                        SeriesType="ApexCharts.SeriesType.Line" />
        </ApexCharts.ApexChart>
    </MudCardContent>
    <MudCardActions>
    </MudCardActions>
</MudCard>