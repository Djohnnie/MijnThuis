<MudItem xs="12" sm="6" md="6" lg="4" xl="3">
    <MudCard Outlined>
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Primary">
                    <MudIcon Icon="@Icons.Material.Filled.Gradient" Title="Favorite" />
                </MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">Sauna</MudText>
                <MudText Typo="Typo.body2">De huidige status van de sauna</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.MoreHoriz" Color="Color.Default" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        <MudIcon Icon="@Icons.Material.Filled.PowerSettingsNew" Size="Size.Medium" Title="Status" Color="Color.Tertiary" />
                        <MudText Typo="Typo.h6">Infrarood</MudText>
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        <MudIcon Icon="@Icons.Material.Filled.Thermostat" Size="Size.Medium" Title="Temperatuur" Color="Color.Secondary" />
                        <MudText Typo="Typo.h6">97 °C</MudText>
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        <MudIcon Icon="@Icons.Material.Filled.Power" Size="Size.Medium" Title="Verbruik" Color="Color.Primary" />
                        <MudText Typo="Typo.h6">5,7 kW</MudText>
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        <MudIcon Icon="@Icons.Material.Filled.Schedule" Size="Size.Medium" Title="Tijd resterend" Color="Color.Primary" />
                        <MudText Typo="Typo.h6">46 min</MudText>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudIconButton Icon="@Icons.Material.Filled.Gradient" Color="Color.Default" />
            <MudIconButton Icon="@Icons.Material.Filled.Waves" Color="Color.Default" />
            <MudIconButton Icon="@Icons.Material.Filled.PowerSettingsNew" Color="Color.Default" />
        </MudCardActions>
    </MudCard>
</MudItem>