<MudItem xs="12" sm="6" md="6" lg="4" xl="3">
    <MudCard Outlined>
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Primary">
                    <MudIcon Icon="@Icons.Material.Filled.Gradient" Title="Favorite" />
                </MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">Sauna</MudText>
                <MudText Typo="Typo.body2">De huidige status van de sauna</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.MoreHoriz" Color="Color.Default" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        @if (IsReady)
                        {
                            <MudIcon Icon="@Icons.Material.Filled.PowerSettingsNew" Size="Size.Medium" Title="Status" Color="Color.Tertiary" />
                            <MudText Typo="Typo.h6">@State</MudText>
                        }
                        else
                        {
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                            <MudSkeleton Animation="Animation.Wave" Width="60%" />
                        }
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        @if (IsReady)
                        {
                            <MudIcon Icon="@Icons.Material.Filled.ElectricBolt" Size="Size.Medium" Title="Huidig vermogen" Color="Color.Tertiary" />
                            <MudText Typo="Typo.h6">@String.Format("{0:F0}", Power) kW</MudText>
                        }
                        else
                        {
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                            <MudSkeleton Animation="Animation.Wave" Width="60%" />
                        }
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        @if (IsReady)
                        {
                            <MudIcon Icon="@Icons.Material.Filled.Thermostat" Size="Size.Medium" Title="Temperatuur" Color="Color.Secondary" />
                            <MudText Typo="Typo.h6">@InsideTemperature °C</MudText>
                        }
                        else
                        {
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                            <MudSkeleton Animation="Animation.Wave" Width="60%" />
                        }
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        @if (IsReady)
                        {
                            <MudIcon Icon="@Icons.Material.Filled.Thermostat" Size="Size.Medium" Title="Buitentemperatuur" Color="Color.Secondary" />
                            <MudText Typo="Typo.h6">@OutsideTemperature °C</MudText>
                        }
                        else
                        {
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                            <MudSkeleton Animation="Animation.Wave" Width="60%" />
                        }
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudIconButton Icon="@Icons.Material.Filled.Gradient" Size="Size.Large" Color="Color.Default" />
            <MudIconButton Icon="@Icons.Material.Filled.Waves" Size="Size.Large" Color="Color.Default" />
            <MudIconButton Icon="@Icons.Material.Filled.PowerSettingsNew" Size="Size.Large" Color="Color.Default" />
        </MudCardActions>
    </MudCard>
</MudItem>