<MudItem xs="12" sm="6" md="6" lg="4" xl="3">
    <MudCard Outlined>
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Primary">
                    <MudIcon Icon="@Icons.Material.Filled.ElectricCar" Title="Favorite" />
                </MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">Auto</MudText>
                <MudText Typo="Typo.body2">@(string.IsNullOrEmpty(Title) ? "Huidige status van de auto" : Title)</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.MoreHoriz" Color="Color.Default" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        @if (IsReady)
                        {
                            <MudIcon Icon="@Icons.Material.Filled.Battery5Bar" Size="Size.Medium" Title="Beschikbaar batterijpercentage" Color="Color.Tertiary" />
                            <MudText Typo="Typo.h6">@BatteryLevel %</MudText>
                        }
                        else
                        {
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                            <MudSkeleton Animation="Animation.Wave" Width="60%" />
                        }
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        @if (IsReady)
                        {
                            <MudIcon Icon="@Icons.Material.Filled.CardTravel" Size="Size.Medium" Title="Beschikbaar rijbereik" Color="Color.Secondary" />
                            <MudText Typo="Typo.h6">@RemainingRange km</MudText>
                        }
                        else
                        {
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                            <MudSkeleton Animation="Animation.Wave" Width="60%" />
                        }
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        @if (IsReady)
                        {
                            <MudIcon Icon="@Icons.Material.Filled.Thermostat" Size="Size.Medium" Title="Binnentemperatuur" Color="Color.Primary" />
                            <MudText Typo="Typo.h6">@TemperatureInside °C</MudText>
                        }
                        else
                        {
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                            <MudSkeleton Animation="Animation.Wave" Width="60%" />
                        }
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        @if (IsReady)
                        {
                            <MudIcon Icon="@Icons.Material.Filled.Thermostat" Size="Size.Medium" Title="Buitentemperatuur" Color="Color.Primary" />
                            <MudText Typo="Typo.h6">@TemperatureOutside °C</MudText>
                        }
                        else
                        {
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                            <MudSkeleton Animation="Animation.Wave" Width="60%" />
                        }
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudIconButton Icon="@Icons.Material.Filled.LockOpen" Size="Size.Large" Color="Color.Tertiary" Disabled="@(!IsReady || !IsLocked)" Title="Slot openen"
                           OnClick="UnlockCommand" />
            <MudIconButton Icon="@Icons.Material.Filled.Lock" Size="Size.Large" Color="Color.Secondary" Disabled="@(!IsReady || IsLocked)" Title="Slot sluiten"
                           OnClick="LockCommand" />
            <MudIconButton Icon="@Icons.Material.Filled.HeatPump" Size="Size.Large" Color="Color.Primary" Title="Voorverwarmen"
                           OnClick="PreheatCommand" Disabled="@(!IsReady)" />
            <MudIconButton Icon="@Icons.Material.Filled.Air" Size="Size.Large" Color="Color.Primary" Title="Scheetje laten"
                           OnClick="FartCommand" Disabled="@(!IsReady)" />
        </MudCardActions>
    </MudCard>
</MudItem>

<MudMessageBox @ref="Message" Title="Ben je zeker?" CancelText="Annuleren">
    <MessageContent>
        Deleting can <b><i>not</i></b> be undone!
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" StartIcon="@Icons.Material.Filled.DeleteForever">Uitvoeren</MudButton>
    </YesButton>
</MudMessageBox>