@inherits OwningComponentBase

<MudItem xs="12" sm="6" md="6" lg="4" xl="3">
    <MudCard Outlined>
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Primary">
                    <MudIcon Icon="@Icons.Material.Filled.ElectricCar" Title="Favorite" />
                </MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">Auto</MudText>
                <MudText Typo="Typo.body2">@(string.IsNullOrEmpty(Title) ? "Huidige status van de auto" : Title)</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        @if (IsReady)
                        {
                            <MudTooltip Text="Beschikbaar batterijpercentage" Arrow="true" Placement="Placement.Bottom">
                                <MudIcon Icon="@Icons.Material.Filled.Battery5Bar" Size="Size.Medium" Color="@(BatteryLevel < 50 ? Color.Secondary : Color.Tertiary)" />
                            </MudTooltip>
                            <MudText Typo="Typo.subtitle1">@BatteryLevel%</MudText>
                        }
                        else
                        {
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                            <MudSkeleton Animation="Animation.Wave" Width="60%" />
                        }
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        @if (IsReady)
                        {
                            <MudTooltip Text="Beschikbaar rijbereik" Arrow="true" Placement="Placement.Bottom">
                                <MudIcon Icon="@Icons.Material.Filled.CardTravel" Size="Size.Medium" Color="@(BatteryLevel < 50 ? Color.Secondary : Color.Tertiary)" />
                            </MudTooltip>
                            <MudText Typo="Typo.subtitle1">@RemainingRange km</MudText>
                        }
                        else
                        {
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                            <MudSkeleton Animation="Animation.Wave" Width="60%" />
                        }
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        @if (IsReady)
                        {
                            <MudTooltip Text="Binnentemperatuur" Arrow="true" Placement="Placement.Bottom">
                                <MudIcon Icon="@Icons.Material.Filled.Thermostat" Size="Size.Medium" Color="Color.Primary" />
                            </MudTooltip>
                            <MudText Typo="Typo.subtitle1">@TemperatureInside °C</MudText>
                        }
                        else
                        {
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                            <MudSkeleton Animation="Animation.Wave" Width="60%" />
                        }
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex gap-4" Elevation="0">
                        @if (IsReady)
                        {
                            <MudTooltip Text="Buitentemperatuur" Arrow="true" Placement="Placement.Bottom">
                                <MudIcon Icon="@Icons.Material.Filled.Thermostat" Size="Size.Medium" Title="Buitentemperatuur" Color="Color.Primary" />
                            </MudTooltip>
                            <MudText Typo="Typo.subtitle1">@TemperatureOutside °C</MudText>
                        }
                        else
                        {
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.Wave" Height="30px" Width="30px" Class="ml-2 mb-2" />
                            <MudSkeleton Animation="Animation.Wave" Width="60%" />
                        }
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            @if (UnlockPending)
            {
                <MudIconButton Size="Size.Large" Disabled="true">
                    <MudProgressCircular Color="Color.Default" Size="Size.Small" Indeterminate="true" />
                </MudIconButton>
            }
            else
            {
                <MudTooltip Text="Auto openen" Arrow="true" Placement="Placement.Bottom">
                    <MudIconButton Icon="@Icons.Material.Filled.LockOpen" Size="Size.Large" Color="Color.Tertiary" Disabled="@(!IsReady || !IsLocked)"
                                   OnClick="UnlockCommand" />
                </MudTooltip>
            }

            @if (LockPending)
            {
                <MudIconButton Size="Size.Large" Disabled="true">
                    <MudProgressCircular Color="Color.Default" Size="Size.Small" Indeterminate="true" />
                </MudIconButton>
            }
            else
            {
                <MudTooltip Text="Auto sluiten" Arrow="true" Placement="Placement.Bottom">
                    <MudIconButton Icon="@Icons.Material.Filled.Lock" Size="Size.Large" Color="Color.Secondary" Disabled="@(!IsReady || IsLocked)"
                                   OnClick="LockCommand" />
                </MudTooltip>
            }

            <MudTooltip Text="Auto voorverwarmen" Arrow="true" Placement="Placement.Bottom">
                <MudIconButton Icon="@Icons.Material.Filled.HeatPump" Size="Size.Large" Color="Color.Primary"
                               OnClick="PreheatCommand" Disabled="@(!IsReady)" />
            </MudTooltip>

            <MudTooltip Text="Scheetje laten" Arrow="true" Placement="Placement.Bottom">
                <MudIconButton Icon="@Icons.Material.Filled.Air" Size="Size.Large" Color="Color.Primary"
                               OnClick="FartCommand" Disabled="@(!IsReady)" />
            </MudTooltip>
        </MudCardActions>
    </MudCard>
</MudItem>

<MudMessageBox @ref="Message" Title="Auto openen" CancelText="Annuleren">
    <MessageContent>
        Ben je zeker dat je de auto wil openen?
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.LockOpen">Auto openen</MudButton>
    </YesButton>
</MudMessageBox>